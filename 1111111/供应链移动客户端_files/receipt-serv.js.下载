angular.module('myApp').service('ReceiptService',['$q','$es','$rootScope','$istore','$modal',function($q,$es,$rootScope,$istore,$modal){
     
	this.getReceiptStatus = function(){
    	return [
                {id:undefined,name:'状态'},
                {id:'0',name:'待认领'},
                {id:'1',name:'已认领'},
                {id:'2',name:'已完成'},
                {id:'3',name:'已作废'}
            ];	
    };
    
    this.getPayMethod = function(){
    	return [
                {id:undefined,name:'付款方式'},
                {id:'电汇',name:'电汇'},
                {id:'电票',name:'电票'}
            ];	
    };
    
    
    this.getSkPaymentList = function(filter,page,searchVal,company,customId){
    	
     	var limit=5;
       	var params=　{}; 
       	params.page = page;
       	params.start = page*limit;
    	params.limit = limit;
    	params.searchKey = searchVal;
    	params.customerId = customId;
		for(var key in filter){
			params[key] = filter[key];
		}
		params.companyId = company;
		console.info(params);
	   	var promise = $es.ajax('skPaymentBean.getSkPaymentList',params);
	   	return promise;
	}
    
    this.getSkPaymentInfo = function(id){
       	var params=　{"id":id}; 
		console.info(params);
	   	var promise = $es.ajax('skPaymentBean.getSkPaymentInfo',params);
	   	return promise;
	}
    
    this.saveSkPaymentReceipt = function(params){
    	console.info(params);
    	var promise = $es.ajax('skPaymentBean.saveSkPamentReceipt',params);
	   	return promise;
    }

}]);

